---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div
    id="page"
    class="h-screen flex flex-col justify-center items-center p-0 m-0"
  >
    <h1 class="text-4xl text-white font-semibold">404</h1>
    <h2 class="text-2xl text-gray-100">Doesn't exist Bob</h2>
    <div class="my-4"></div>
    <a href="/" class="px-3 py-1 border border-gray-100 text-gray-100"
      >Go Back</a
    >
  </div>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"
    is:inline
    defer
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.waves.min.js"
    is:inline
    defer
  ></script>
  <script>
    addEventListener("DOMContentLoaded", (event) => {
      VANTA.WAVES({
        el: "#page",
        mouseControls: true,
        touchControls: true,
        gyroControls: false,
        scale: 1.0,
        scaleMobile: 1.0,
        color: "#0a1c48",
        shininess: 6.0,
      });
    });
  </script>
</BaseLayout>
