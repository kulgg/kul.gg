---
import Layout from "../../layouts/Layout.astro";
import type { Frontmatter } from "../../types/frontmatter";
import { getSlug } from "../../utils/blog";

const posts = await Astro.glob<Frontmatter>("../../../data/blog/*.md");
---

<Layout>
  <main class="container px-2 py-2">
    <h2 class="text-2xl">Blog</h2>
    {
      posts.map((post) => {
        return <div>{getSlug(post.file)}</div>;
      })
    }
  </main>
</Layout>
