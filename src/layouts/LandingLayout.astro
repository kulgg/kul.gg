---
import Header from "../layouts/Header";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="Personal developer site of kulgg" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>kul.gg</title>
	</head>
	<body class="bg-gray-800 text-gray-100">
		<Header client:load />
		<div id="landing-screen" class="bg-gray-900">
			<div class="min-h-screen flex flex-col justify-between container">
				<div></div>
				<h1
					class="pb-2 text-5xl font-bold text-center text-transparent bold-text bg-clip-text bg-gradient-to-r from-pink-200 via-purple-200 to-orange-200 animate-gradient-text"
				>
					kul<span class="text-blue-500">.</span>gg
				</h1>
				<div class="self-center mb-16">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						fill="none"
						viewBox="0 0 24 24"
						stroke-width="1.5"
						stroke="currentColor"
						class="w-6 h-6"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M19.5 5.25l-7.5 7.5-7.5-7.5m15 6l-7.5 7.5-7.5-7.5"></path>
					</svg>
				</div>
			</div>
		</div>
		<main class="container">
			<slot />
		</main>
		<script
			src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"
			is:inline
			defer
		></script>
		<script
			src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.birds.min.js"
			is:inline
			defer
		></script>
		<script>
			addEventListener("DOMContentLoaded", (event) => {
				VANTA.BIRDS({
					el: "#landing-screen",
					mouseControls: true,
					touchControls: true,
					gyroControls: false,
					scale: 1.0,
					scaleMobile: 1.0,
					birdSize: 0.5,
					wingSpan: 40.0,
					quantity: 2.0,
					backgroundAlpha: 0.0,
					speedLimit: 5.0,
					color1: "#2563eb",
					color2: "#0284c7",
				});
			});
		</script>
	</body>
</html>
