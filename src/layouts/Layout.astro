---
import Header from "./Header";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Personal developer site of kulgg" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-800 text-gray-100 h-screen" id="body">
    <Header />
    <div class="container">
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>
